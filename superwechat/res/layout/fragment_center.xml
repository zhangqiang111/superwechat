<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="cn.ucai.superwechat.ui.CenterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_selector"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                >

                <ImageView
                    android:id="@+id/user_head_avatar"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/em_default_avatar"
                    />

                <ImageView
                    android:id="@+id/user_head_headphoto_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/user_head_avatar"
                    android:layout_alignBottom="@+id/user_head_avatar"
                    android:layout_alignRight="@+id/user_head_avatar"
                    android:layout_margin="3dip"
                    android:src="@drawable/em_profile_headphoto_update_icon"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/user_head_headphoto_update">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/user_head_headphoto_update"
                        android:text="测试"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/user_head_headphoto_update"
                        android:text="测试"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/qrcode"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_pressed"

                />

            <TextView
                android:id="@+id/tv_photo"
                style="@style/list_txt_Style_without_right"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icon_me_photo"
                android:text="@string/profile_txt_album"
                />

            <TextView
                android:id="@+id/tv_collect"
                style="@style/list_txt_Style_without_right"
                android:drawableLeft="@drawable/icon_me_collect"
                android:text="@string/profile_txt_collect"
                />

            <TextView
                android:id="@+id/tv_card"
                style="@style/list_txt_Style_without_right"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icon_me_card"
                android:text="@string/profile_txt_card"
                />

            <TextView
                android:id="@+id/tv_smail"
                style="@style/list_txt_Style_without_right"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icon_me_smail"
                android:text="@string/profile_txt_smail"
                />

            <TextView
                android:id="@+id/tv_settings"
                style="@style/list_txt_Style_without_right"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icon_me_setting"
                android:text="@string/profile_txt_setting"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
